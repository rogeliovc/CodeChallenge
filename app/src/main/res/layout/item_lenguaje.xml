<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="28dp"
    app:cardElevation="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:id="@+id/layoutLenguajeBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="22dp"
        android:background="@color/colorCard">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_gravity="start|center_vertical"
            android:contentDescription="Regresar"
            android:tint="@color/colorText"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/imgLenguajeIcono"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/ic_code"
            android:contentDescription="icono lenguaje"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"
            android:tint="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="18dp">
            <TextView
                android:id="@+id/textLenguajeNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Python"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold"
                android:shadowColor="#22000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>
            <TextView
                android:id="@+id/textLenguajeTagline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Versatilidad y simplicidad"
                android:textColor="#e0e0e0"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/textLenguajeNumRetos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="12 retos"
                android:textColor="#FFD600"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
