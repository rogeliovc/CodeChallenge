<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FB"
    android:paddingTop="64dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <!-- Título dentro del contenido, NO barra superior -->
    <TextView
        android:id="@+id/txtStatsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resumen de Logros"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#222"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Tarjeta de ejercicios contestados -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_card"
                android:padding="18dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_exercise_done"
                    android:contentDescription="Ejercicios contestados"
                    android:tint="#4F8EF7" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/txtExercisesSolved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#4F8EF7" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ejercicios contestados"
                        android:textSize="14sp"
                        android:textColor="#777" />
                </LinearLayout>
            </LinearLayout>

            <!-- Tarjeta de aciertos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_card"
                android:padding="18dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_check_circle"
                    android:contentDescription="Ejercicios correctos"
                    android:tint="#43B581" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/txtExercisesCorrect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#43B581" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resueltos correctamente"
                        android:textSize="14sp"
                        android:textColor="#777" />
                </LinearLayout>
            </LinearLayout>

            <!-- Porcentaje de aciertos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_card"
                android:padding="18dp"
                android:layout_marginBottom="24dp"
                android:elevation="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_percent"
                    android:contentDescription="Porcentaje de aciertos"
                    android:tint="#F7B32B" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/txtAccuracy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#F7B32B" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Porcentaje de aciertos"
                        android:textSize="14sp"
                        android:textColor="#777" />
                </LinearLayout>
            </LinearLayout>

            <!-- Logros -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logros"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp" />

            <!-- Lista de logros (simulada) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_card"
                    android:padding="14dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="2dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_medal"
                        android:tint="#FFD700"
                        android:contentDescription="Primer ejercicio resuelto" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Primer ejercicio resuelto"
                        android:textColor="#444"
                        android:textSize="16sp"
                        android:paddingStart="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_card"
                    android:padding="14dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="2dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_medal"
                        android:tint="#C0C0C0"
                        android:contentDescription="5 ejercicios resueltos" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 ejercicios resueltos"
                        android:textColor="#444"
                        android:textSize="16sp"
                        android:paddingStart="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_card"
                    android:padding="14dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="2dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_medal"
                        android:tint="#cd7f32"
                        android:contentDescription="Todos los retos fáciles completados" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Todos los retos fáciles completados"
                        android:textColor="#444"
                        android:textSize="16sp"
                        android:paddingStart="12dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Espacio extra -->
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
